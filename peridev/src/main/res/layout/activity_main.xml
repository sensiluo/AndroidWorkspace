<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.activities.MainActivity">

    <TextView
        android:id="@+id/text_sans_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:minLines="1"
        android:shadowColor="#00ccff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@string/text_font_content"
        android:textColor="#00ccff"
        android:textColorLink="#8DE67F"
        android:textSize="20sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/text_custom_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sans_font"
        android:text="@string/text_custom_font"
        android:textColor="#8DE67F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_custom_font"
        android:text="Account:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/text_account_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_custom_font"
        android:hint="disneyland"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:singleLine="true"
        android:textColorHighlight="#023478" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/text_account_label"
        android:layout_toRightOf="@+id/text_account_label"
        android:text="@string/submit"
        style="@style/CustomButton"/>


</RelativeLayout>
